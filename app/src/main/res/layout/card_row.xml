<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/mywhite"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/theIV"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"

        android:scaleType="fitCenter"
        android:src="@drawable/bannerimg" />

    <TextView
        android:id="@+id/productNametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theIV"
        android:fontFamily="@font/barlow"
        android:textColor="@color/mycolorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        tools:text="Samsung Galaxy s7" />



    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNametextView"

        android:fontFamily="@font/barlow"
        android:textColor="@color/mycolorPrimaryDark"
        android:gravity="left"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"

        android:textStyle="italic"
        tools:text="Price: Php. 17,000.00" />


    <ImageView
        android:id="@+id/theOption"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/theIV"
        android:layout_marginTop="5dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_more_vert_black_24dp" />



</RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>